      "event_id": "Unique string identifier. Must match server.active_event_id.",
      "name": "Short display name for UI.",
      "tagline": "Optional short tagline.",
      "description": "Optional longer description for UI.",
      "season": "Season this event aligns to.",
      "start_at": "Optional ISO timestamp for scheduling.",
      "end_at": "Optional ISO timestamp for scheduling.",
      "badge_id": "Badge granted for discovering an event recipe.",
      "effects": "Optional effect payload for future systems.",
      "event_recipes": "Optional list of temporary recipes available only during the event."
    },
    "event_recipe_fields": {
      "recipe_id": "Unique recipe id scoped to events.",
      "name": "Display name for the recipe.",
      "tier": "Recipe tier (common/rare/epic/seasonal).",
      "season": "Optional season tag for recipe filtering.",
      "ingredients": "List of ingredient objects using existing item ids.",
      "base_price": "Optional base price override.",
      "notes": "Optional dev notes."
    }
  },
